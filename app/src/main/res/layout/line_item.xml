<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_marginStart="@dimen/horizontal_margin_medium"
              android:layout_marginEnd="@dimen/horizontal_margin_medium"
              android:layout_marginTop="@dimen/vertical_margin_small"
              android:layout_marginBottom="@dimen/vertical_margin_small"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/minimal_padding"
              android:paddingStart="@dimen/minimal_padding"
              android:paddingEnd="@dimen/minimal_padding"
              android:paddingBottom="@dimen/minimal_padding">

    <TextView
            android:id="@+id/lineItemNameTv"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            tools:text="Fila Exemplo"
            android:textSize="@dimen/text_size_large"/>

    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1" android:layout_height="wrap_content">

        <TextView
                android:textColor="@color/colorBlack"
                android:id="@+id/lineItemWaitTimer"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="30 min"/>

        <TextView
                android:backgroundTint="@color/colorForestGreen"
                android:backgroundTintMode="src_atop"
                android:id="@+id/getInLineBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/vertical_margin_small"
                tools:text="entrar"
                android:textStyle="bold"
                android:padding="@dimen/minimal_padding"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_black_stroke"/>

    </LinearLayout>


</LinearLayout>